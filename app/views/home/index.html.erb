<div class="main">
  <div class="wrapper">
    <div class="advertising float-left">
      <div id="carouselExampleControls" class="carousel slide">
        <div class="carousel-inner">
          <% @advertisings.each_with_index do |advertising, index| %>
            <div class="carousel-item <%='active' unless index!=0 %> ">
              <%= image_tag advertising.image, alt: advertising.name, class: "d-block w-100" %>
            </div>
          <% end %>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
      <div id="icons" class="text-center">
        <a href="https://www.facebook.com/junior.farias.792" target="_blank">
          <i class="fa fa-facebook-square" aria-hidden="true"></i>
        </a>
        <a href="https://www.facebook.com/junior.farias.792" target="_blank">
          <i class="fa fa-twitter-square" aria-hidden="true"></i>
        </a>
        <a href="https://www.facebook.com/junior.farias.792" target="_blank">
          <i class="fa fa-instagram" aria-hidden="true"></i>
        </a>
      </div>
    </div>
    <div id="ipay" class="float-left">
      <div id="poster" class="text-center">
        <p class="font-weight-bold">LAST PAID</p>
      </div>
      <div id="amount" class="text-center border border-dark rounded">
        <span class="ng-binding ng-scope">$1.000</span>
      </div>
      <div id="bet">
        <a class="btn btn-primary" href="http://0.0.0.0:3000/pay" role="button">cover supply</a>
      </div>
    </div>
  </div>
</div>


