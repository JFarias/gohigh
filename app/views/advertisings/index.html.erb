<p id="notice"><%= notice %></p>

<h1>Advertisings</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Description</th>
      <th>Amount</th>
      <th>Payment</th>
      <th>Redirect link</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @advertisings.each do |advertising| %>
      <tr>
        <td><%= advertising.name %></td>
        <td><%= advertising.email %></td>
        <td><%= advertising.description %></td>
        <td><%= advertising.amount %></td>
        <td><%= advertising.payment %></td>
        <td><%= advertising.redirect_link %></td>
        <td><%= advertising.image %></td>
        <td><%= link_to 'Show', advertising %></td>
        <td><%= link_to 'Edit', edit_advertising_path(advertising) %></td>
        <td><%= link_to 'Destroy', advertising, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

